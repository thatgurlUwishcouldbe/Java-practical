package peep;

class coffee {
    private final  String type;
    private final String size;
    private double price;
    
    public coffee(String type, String size, double price) {
        this.type = type;
        this.size = size;
        this.price = price;
    }
    
    public void displayOrder(){
        System.out.println("---Order Summray--- \nCoffee Order: \n-Type: " +type+ "\n-Size: " +size+ "\n-Price:$ " +price);
    }
}

class dessert {
    private final String name;
    private double price;

    public dessert(String name, double price) {
        this.name = name;
        this.price = price;
    }
    
    public void displayDessert(){
        System.out.println("Dessert: \n-Name: " +name+ "\n-Price:$ " +price);
    }
}

class specialtyCoffee extends coffee{
    private boolean extraShot;    
    private final String milkType;

    public specialtyCoffee(String type, String size, double price ,boolean extraShot, String milkType) {
        super(type, size, price);
        this.extraShot = extraShot;
        this.milkType = milkType;
    }
    
    //@override
    public void displayOrder(){
        super.displayOrder();
        System.out.println("-Extra Shot: \n" +extraShot+ "-Milk Tybe: " +milkType);
    }
}

public class coffeeShope{
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        
        System.out.println("Welcome to java bean Coffee Shope!");
        System.out.println("Would you like or order: \n1. Coffee only\n2. Coffee with Dessert");
        
        int choice = input.nextInt();
        
        System.out.print("Enter Coffee type: 1.black | 2.latte | 3.flat whait ");
        int num = input.nextInt();
        
        String type ="";
        switch(num){
            case 1: type = "black";
                break;
            case 2: type = "latte";
                break;
            case 3: type = "flat";
        }
        
        System.out.print("Ente size: Small | Medium | Larg ");
        String size = input.next();
        
        System.out.print("Enter Coffee price: ");
        double price = input.nextDouble();
        
        coffee obj = new coffee(type, size, price);
        
        if(choice == 2){
            System.out.print("Enter dessert name:Muffi | Brownie | Cookies ");
            String named = input.next();
            
            System.out.print("Enter dessert price: ");
            double priced = input.nextDouble();
            
            dessert objD = new dessert(named, priced);
            obj.displayOrder();
            objD.displayDessert();
        }
        else{  
            System.out.print("add extra Shot(true/false)");
            boolean shot = input.hasNextBoolean(); 
            if(shot == true){
                obj.displayOrder();
                System.out.println("-Extra ShotP: Yes");
            }
            else{
                obj.displayOrder();
                System.out.println("-Extra Shot: No");
            }
        }
    }
}
